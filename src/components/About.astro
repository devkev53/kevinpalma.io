---
import Ornaments from '@/icons/Ornaments.astro'
import {useTranslations, getLangFromUrl} from '@/i18n/utils.ts'

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="about">

  <div class="container">
    <h3 class="title aboutTitle">{t('about.title')}</h3>
    <div class="content aboutContent">
      <div class="info">
        <p>{t('about.p1')}</p>
        <p>{t('about.p2')}</p>
        <p>{t('about.p3')}</p>
      </div>
      <div class="pictureWrapper">
        <picture class="myPicture">
          <img src="/public/assets/imgs/picture.jpg" alt="" srcset="">
        </picture>
      </div>
    </div>
