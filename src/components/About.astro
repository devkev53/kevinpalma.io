<style>
  #about {
    display: flex;
    justify-content: center;
    position: relative;
    /* position: relative; */
    padding-bottom: 4rem;
  }
  #about::before,
  #about::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    /* height: 100%; */
    width: 281%;
    background: rgba(var(--inverse), .3);
    transform: rotate(4deg);
  }
  #about::after {
    background: rgba(var(--bg));
    height: 2rem;
    top: 2rem;
  }
  .container {
    width: 100%;
    max-width: var(--max_width);
    padding: 6rem 2rem;
    position: relative;
    z-index: 1;
  }
  .content {
    display: grid;
    grid-template-rows: auto 1fr;
    z-index: 1;
    padding: 2rem;
    border-radius: 1.2rem;
    gap: 2rem;
  }
  .info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    order: 2;
    background: rgba(255,255,255,.1);
    padding: 4rem 1rem;
    border-top-right-radius: 4rem;
    border-bottom-left-radius: 4rem;

    view-timeline-name: --infoContent;
    view-timeline-axis: block;

    animation-timeline: --infoContent;
    animation-name: show;
  }
  .title {
    font-size: clamp(3.8rem, 5vw, 6.5rem);
    /* opacity: 0; */
    text-shadow: 0 0 .1rem rgba(0,0,0, 1);
  }
  .pictureWrapper {
    height: clamp(22rem, 30vw, 40rem);
    width: clamp(22rem, 30vw, 40rem);
    margin: 0 auto;
    margin-bottom: -5rem;
    order: 1;
    filter: drop-shadow(.5rem .5rem 1rem rgba(0,0,0,.7));
  }
  .myPicture {
    clip-path: polygon(30% 0%, 70% 0%, 100% 30%, 100% 70%, 70% 100%, 30% 100%, 0% 70%, 0% 30%);
    background: rgba(var(--inverse));
    padding: .5rem;
    transition: .3s all ease;
  }
  .myPicture img {
    clip-path: polygon(30% 0%, 70% 0%, 100% 30%, 100% 70%, 70% 100%, 30% 100%, 0% 70%, 0% 30%);
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 767px) {
    .content {
      grid-auto-flow: column;
      grid-template-rows: 1fr;
      grid-template-columns: 1fr minmax(22rem, 35rem);
    }
    .pictureWrapper {
      order: 2;
      align-self: center;
      margin-left: -5rem;
      filter: drop-shadow(-.5rem .5rem 1rem rgba(0,0,0,.7));
    }
    .myPicture {
      order: 2;
      margin: 0;
    }
    .info {
      padding: 4rem;
    }
  }
  @keyframes show {
    0% {opacity: 0;}
    100% {opacity: 1;}
  }
  @keyframes showImg {
    0% {opacity: 0; transform: scale(.1);}
    100% {opacity: 1;}
  }
</style>
