<style>
  .logoContainerHero {
    width: clamp(22rem, 30vw, 40rem);
    height: clamp(22rem, 30vw, 40rem);
    background: #000;
    border-radius: 50%;
    border: .5rem solid rgba(var(--inverse));
    box-shadow: 0 0 .5rem rgba(var(--inverse));
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    justify-self: center;
    transition: .3s all ease;
    z-index: -1;
  }
  .logoContainerHero.light {
    background: rgba(var(--bg));
  }

  .logoContainerHero svg {
    position: absolute;
    height: 120%;
    width: 120%;
    animation: float 6s ease-in-out infinite;
    filter: drop-shadow(5px 15px 5px rgba(0,0,0));
  }

  @keyframes float {
    0% {
      transform:translatey(0px);
    }
    50% {
      transform:translatey(-10px);
    }
    100% {
      transform:translatey(0px);
    }
  }
</style>